<!-- Used for both sign up (new) and edit; With form_for(@user), Rails uses
     POST if @user.new_record? is true and PATCH if it's false. -->
<%= form_for(@user) do |f| %>
  <%= f.label :name, "Username" %>
  <%= f.text_field :name, class: 'form-control' %>

  <%= f.label :password %>
  <%= f.password_field :password, class: 'form-control' %>

  <%= f.label :password_confirmation, "Confirmation" %>
  <%= f.password_field :password_confirmation, class: 'form-control' %>

  <%= f.submit yield(:button_text), class: "btn btn-small btn-primary submit" %>
<% end %>