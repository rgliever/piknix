<% if @posts.empty? %>
	<h2>No images to display ...</h2>
<% else %>

	<% @posts.in_groups_of(3).each do |three_posts| %>
		<div class="row">
		<% three_posts.each do |post| %>
			<div class="col-md-4">
				<% if !post.nil? %>
					<%= image_tag(post.url, width: "300px", alt: post.description) %>
					<p> <%= post.description %> </p>
				<% end %>
			</div>
		<% end %>
		</div>
	<% end %>

<% end %>