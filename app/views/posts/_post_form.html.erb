<%= form_for @post, html: { multipart: true } do |f| %>

	<div class="row">
		<div class="col-xs-12">
			<h3>Create a new post!</h3>
		</div>

		<div class="field col-xs-12" id="image-url">
			<%= f.label :url, "Image URL" %>
			<%= f.text_field :url, class: 'form-control' %>
		</div>

		<div class="or-separator col-xs-12">
				<h5>- OR -</h5>
		</div>

		<div class="field col-xs-12" id="image-upload">
			<%= f.label :image, "Upload image" %>
			<%= f.file_field :image, class: 'form-control' %>
		</div>
		
		<div class="field col-xs-12" id="image-tags">
			<%= f.label :tag_list, "Tags (separated by commas)" %>
			<%= f.text_field :tag_list, placeholder: "gimme at least one", class: 'form-control' %>
		</div>

		<div class="actions col-xs-12">
			<%= f.submit "submit", class: "btn btn-small btn-primary submit" %>
		</div>
	</div>

<% end %>