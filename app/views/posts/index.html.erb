<% if flash.any? %>
	<%= javascript_tag "$(document).ready(function() { show_post_form(); });" %>
<% end %>

<div class="container-fluid" id="new-post">
	<% if logged_in? %>

		<% provide(:subtitle, "Post a photo below.") %>

	<% else %>

		<% provide(:subtitle, "Sign up to start posting.") %>
		<%= link_to "Sign up", signup_path, 
			id: "sign-up-button", class: "btn btn-primary submit" %>

	<% end %>
</div>

<div class="container-fluid" id="posts-board">
	<%= render 'shared/board' %>
</div>
