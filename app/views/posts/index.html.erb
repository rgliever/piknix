<% provide(:subtitle, "Post a photo below.") %>

<% if flash.any? %>
	<%= javascript_tag "$(document).ready(function() { show_post_form(); });" %>
<% end %>

<div class="container-fluid" id="new-post">
	<button id="new-post-button" class="btn btn-primary toggle">
		New Post
	</button>
	<div id="post-form">
		<%= render 'post_form' %>
	</div>
	<% flash.each do |msg_type, msg| %>
		<div class="alert alert-<%= msg_type %>">
			<h4><%= msg %></h4>
		</div>
  <% end %>
</div>

<div class="container-fluid" id="posts-board">
	<%= render 'board' %>
</div>